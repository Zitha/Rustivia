                      Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="23"/>
        </StackPanel>
        <Image Grid.Column="0" Grid.Row="1" Height="500" Width="Auto" Margin="5" Grid.ColumnSpan="2"
               Source="/Resource/rustiviaLogo.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
